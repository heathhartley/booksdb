@model Books


<tr>
    <th scope="row">#@Model.BookId</th>

    @*add secret message to book id 5*@
    @if (Model.BookId == 5)
    {
    <th scope="row"><a href="#" data-toggle="tooltip" title="This is the best book :)">@Model.Title</a></th>
    }
    else
    {
    <td>@Model.Title</td>
    }


    <td>@Model.AuthorFirst @Model.AuthorMiddle @Model.AuthorLast</td>
    <td>@Model.Publisher</td>
    <td>@Model.ISBN</td>
    <td>@Model.Classification</td>
    <td>@Model.Category</td>
    <td>$@Model.Price</td>
    <td>@Model.PageNum</td>
    <td>
        <form id="@Model.BookId" asp-page="/purchased" method="post">
            <input type="hidden" asp-for="BookId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
              @*  @Model.Title*@
                <button type="submit" class="btn-success btn-sm pull-right" style="float:right">

                    Add to cart
                </button>
            </span>

        </form>
    </td>

</tr>

