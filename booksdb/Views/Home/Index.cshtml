@{
    ViewBag.Title = "My Online Book Store";
}
@model IQueryable<Books>

<div class="text-center">
    <h1 class="display-3">@ViewBag.Title</h1>
    <p class="font-weight-normal">Learn about <a href="http://heathhartley.com/">Heath</a>.</p>
</div>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Publisher</th>
            <th scope="col">ISBN</th>
            <th scope="col">Classification</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        @*interate through the database and display in table*@
        @foreach (var x in Model)
        {
        <tr>
            <th scope="row">#@x.BookId</th>
            <td>@x.Title</td>
            <td>@x.AuthorFirst @x.AuthorMiddle @x.AuthorLast</td>
            <td>@x.Publisher</td>
            <td>@x.ISBN</td>
            <td>@x.Classification</td>
            <td>@x.Category</td>
            <td>$@x.Price</td>

        </tr>
        }
        
        
</table>
